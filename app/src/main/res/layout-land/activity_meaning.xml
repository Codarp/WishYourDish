<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backmean"
    tools:context="com.arpinster.wishyourdish.Meaning">

    <RelativeLayout
        android:layout_marginTop="35dp"
        android:id="@+id/upper_relative"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list1">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="5dp"
            android:hint="Health Labels here"
            android:layout_margin="10dp"
            android:id="@+id/health_label"
            android:background="@drawable/rounded_edit_text2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/health_meaning"
            android:layout_width="60dp"
            android:textAllCaps="false"
            android:layout_height="40dp"
            android:text="Get"
            android:textColor="#fff"
            android:background="@drawable/mybutton2"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/health_label"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_relative"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/upper_relative"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list1">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="Diet Labels here"
            android:layout_margin="10dp"
            android:id="@+id/diet_label"
            android:padding="5dp"
            android:background="@drawable/rounded_edit_text2"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/diet_meaning"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:background="@drawable/mybutton2"
            android:text="Get"
            android:textColor="#fff"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/diet_label"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="@color/title_recipe"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter the exact labels"
        android:padding="5dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/bottom_relative"
        android:layout_alignParentStart="true" />

</RelativeLayout>
