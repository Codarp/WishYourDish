<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#d1470c" />
            <gradient android:angle="-90" android:startColor="#c40c06" android:endColor="#f55b35"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#d1470c" />
            <solid android:color="#e66728"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#d1470c" />
            <gradient android:angle="-90" android:startColor="#f55b35" android:endColor="#c40c06" />
        </shape>
    </item>
</selector>